<!doctype html >
  <html lang="en">
    <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      <title>Employees List</title>
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>
        
    </head>
    <body class="container" style="margin-top: 50px;">
      <% if (messages.success) { %>
        <div class="alert alert-success" role="alert"><%- messages.success %></div>
      <% } %>

      <% if (messages.error) { %>
      <div class="alert alert-danger" role="alert"><%- messages.error %></div>
      <% } %>

      <div class="card">
        <div class="card-header">
          <ul class="nav nav-pills w-100">
            <li class="nav-pill active">
              <h1"><b>EMPLOYEES</b></h1>
            </li>
            <li class="nav-pill ml-auto">
              <a class="nav-link active" href="/employees/add"><i class="fa fa-plus"></i> NEW EMPLOYEE</a>
            </li>
          </ul>
        </div>
        <div class="card-body">
          <% if(data.length) { %>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">NAME</th>
                  <th scope="col">EMAIL</th>
                  <th scope="col">PHONE</th>
                  <th width="200px">ACTION</th>
                </tr>
              </thead>
              <tbody>
              <% for(var i = 0; i< data.length; i++) { %>
                <tr>
                  <th scope="row"><%= (i+1) %></th>
                  <td><%= data[i].name%></td>
                  <td><%= data[i].email%></td>
                  <td><%= data[i].phone%></td>
                  <td>
                    <a class="btn btn-dark btn-sm edit" href="../employees/view/<%=data[i].id%>"><i class="fa fa-eye"></i> view</a>
                    <a class="btn btn-success btn-sm edit" href="../employees/edit/<%=data[i].id%>"><i class="fa fa-edit"></i> edit</a>                       
                    <a class="btn btn-danger btn-sm delete" onclick="return confirm('Are You sure to DELETE this?')" href="../employees/delete/<%=data[i].id%>"><i class="fa fa-trash"></i> </a>                       
                  </td>
                </tr>
              <% } %>
              </tbody>
            </table>
          <% } %>
          <!-- if the fetch result is empty -->
          <% if(!data.length) { %>
            <p class="text-center">No employee record found!</p>
          <% } %>
        </div>
      </div>
    </body>
</html>